<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounder_border"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_app_bar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_imageProfileLogin"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_menu_camera"
            android:tint="#99ffffff"
            app:civ_border_color="#99ffffff"
            app:civ_border_width="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_foto"
            android:textColor="@color/colorText" />

        <EditText
            android:id="@+id/profile_editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:backgroundTint="#99ffffff"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:drawableTint="#55ffffff"
            android:enabled="false"
            android:fontFamily="@font/lato"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColor="#99ffffff"
            android:textColorHint="#55ffffff"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/profile_editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:backgroundTint="#99ffffff"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:fontFamily="@font/lato"
            android:hint="@string/hint_senha"
            android:inputType="textPassword"
            android:textColor="@color/colorText"
            android:textColorHint="#99ffffff"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp" />

        <EditText
            android:id="@+id/profile_editTextName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:backgroundTint="#99ffffff"
            android:drawableStart="@drawable/ic_name"
            android:drawablePadding="5dp"
            android:fontFamily="@font/lato"
            android:hint="@string/hint_nome"
            android:inputType="textPersonName"
            android:textColor="@color/colorText"
            android:textColorHint="#99ffffff"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp" />

        <EditText
            android:id="@+id/profile_editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:backgroundTint="#99ffffff"
            android:drawableStart="@drawable/ic_telefone"
            android:drawablePadding="5dp"
            android:fontFamily="@font/lato"
            android:hint="TELEFONE"
            android:inputType="phone"
            android:textColor="@color/colorText"
            android:textColorHint="#99ffffff"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp" />

        <EditText
            android:id="@+id/profile_editTextFacebook"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="0"
            android:backgroundTint="#99ffffff"
            android:drawableStart="@drawable/ic_facebook"
            android:drawablePadding="5dp"
            android:fontFamily="@font/lato"
            android:hint="FACEBOOK"
            android:inputType="textUri"
            android:textColor="@color/colorText"
            android:textColorHint="#99ffffff"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/profile_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_borderbutton"
        android:elevation="20dp"
        android:fontFamily="@font/mont"
        android:text="@string/text_salvar"
        android:textAllCaps="true"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>